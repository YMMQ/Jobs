<p id="notice"><%= notice %></p>

<h1>Add Professions</h1>

<table>
  <thead>
    <tr>
      <th>Add</th>
      <th>Profession</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_professions.each do |add_profession| %>
      <tr>
        <td><%= add_profession.add %></td>
        <td><%= add_profession.profession %></td>
        <td><%= add_profession.qty %></td>
        <td><%= link_to 'Show', add_profession %></td>
        <td><%= link_to 'Edit', edit_add_profession_path(add_profession) %></td>
        <td><%= link_to 'Destroy', add_profession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

